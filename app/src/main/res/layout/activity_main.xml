<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_online_blank"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="216dp"
        android:layout_height="216dp"
        android:src="@drawable/ic_altp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"

        />
       <TableRow
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:id="@+id/table_1"
           android:layout_marginTop="288dp"
           android:gravity="center"
           >
           <ImageView
               android:layout_width="64dp"
               android:layout_height="2dp"
               android:background="@color/yellow"
               />
           <Button
               android:layout_width="200dp"
               android:layout_height="46dp"
               android:background="@drawable/bg_menu"
               android:text="Bắt đầu"
               android:id="@+id/btn_start"
               android:textColor="@color/black"
               android:textSize="18dp"/>
           <ImageView
               android:layout_width="64dp"
               android:layout_height="2dp"
               android:background="@color/yellow"
               />
       </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/table_1"
        android:id="@+id/table_2"
        android:layout_marginTop="16dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_menu"
            android:text="ĐIỂM CAO"
            android:id="@+id/btn_hightscore"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/table_2"
        android:id="@+id/table_3"
        android:layout_marginTop="16dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_menu"
            android:text="HƯỚNG DẪN"
            android:id="@+id/btn_guide_game"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/table_3"
        android:id="@+id/table_4"
        android:layout_marginTop="16dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_menu"
            android:text="Thông tin"
            android:id="@+id/btn_information"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <ImageView
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="@color/yellow"
            />
    </TableRow>
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/level_volume"
        android:layout_below="@id/table_4"
        android:layout_marginLeft="32dp"
        android:id="@+id/img_volume"
        />
</RelativeLayout>
